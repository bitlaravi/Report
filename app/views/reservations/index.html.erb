<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Route</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure time</th>
      <th>Duration</th>
      <th>Boarding point</th>
      <th>Dropping point</th>
      <th>Travel date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.route_id %></td>
        <td><%= reservation.origin %></td>
        <td><%= reservation.destination %></td>
        <td><%= reservation.departure_time %></td>
        <td><%= reservation.duration %></td>
        <td><%= reservation.boarding_point %></td>
        <td><%= reservation.dropping_point %></td>
        <td><%= reservation.travel_date %></td>
        <td><%= link_to 'Show', route_reservation_path(@routes) %></td>
        <td><%= link_to 'Edit', route_edit_reservation_path(@routes,reservation) %></td>
        <td><%= link_to 'Destroy', route_reservation(@routes), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

